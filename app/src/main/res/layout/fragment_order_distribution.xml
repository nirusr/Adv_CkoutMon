<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.walmart.ckoutMonitor.fragments.OrderDistributionFragment"
    android:background="@drawable/gradient_shape">
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/tvHeaderOrderDistribution">


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="City"
            android:id="@+id/tvTitleCity"
            android:layout_weight="3"
            android:layout_gravity="left"
            android:textStyle="italic|bold"
            android:textColor="@color/blue"

           />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PostCode"
            android:id="@+id/tvPostalCode"
            android:layout_weight="2"
            android:layout_gravity="center"
            android:textStyle="italic|bold"
            android:textColor="@color/blue"

            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Orders"
            android:id="@+id/tvTitlePostCodeQty"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:textStyle="italic|bold"
            android:textColor="@color/blue"



            />

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvOrderDistribution"
        android:layout_below="@+id/tvHeaderOrderDistribution"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />


</RelativeLayout>
