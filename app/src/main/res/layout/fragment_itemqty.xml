<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_shape"
    tools:context="com.walmart.ckoutMonitor.fragments.ItemQtyFragment"
    >


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" android:orientation="horizontal"
        android:id="@+id/tvHeaderProduct">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Product Description"
            android:id="@+id/tvTitleProductDescription"
            android:layout_weight="4"
            android:layout_gravity="left"
            android:textStyle="italic|bold"

            android:textColor="@color/blue"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Qty"
            android:id="@+id/tvTitleProductQty"
            android:layout_weight="1"
            android:layout_gravity="right"
            android:textStyle="italic|bold"

            android:textColor="@color/blue"


            />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvItems"
        android:layout_below="@+id/tvHeaderProduct"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:transcriptMode="normal"


         />

</RelativeLayout>
