<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_shape"
    tools:context="com.walmart.ckoutMonitor.fragments.ODBySlotFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/llSlots" >


        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:id="@+id/tvTitleSlotWindow"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_weight="3"
            android:text="Delivery Time"
            android:textStyle="bold|italic"
            android:textColor="@color/blue"



            />

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitleSlotQty"
            android:layout_gravity="left"
            android:gravity="left"
            android:layout_weight="1"
            android:text="Orders"
            android:textStyle="bold|italic"
            android:textColor="@color/blue"



            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tvTitleSlotOrderValue"
            android:layout_gravity="left"
            android:gravity="right"
            android:layout_weight="2"
            android:text="Amount"
            android:textStyle="bold|italic"
            android:textColor="@color/blue"





            />
    </LinearLayout>
     <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/lvSlots"
        android:layout_below="@+id/llSlots"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"

        />




</RelativeLayout>
